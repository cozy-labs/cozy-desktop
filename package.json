{
  "name": "cozy-desktop",
  "version": "0.16.0",
  "description": "File Synchronization Client for Cozy Cloud",
  "homepage": "https://docs.cozy.io/en/mobile/desktop.html",
  "author": "Cozy Cloud <contact@cozycloud.cc> (https://cozycloud.cc/)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/cozy-labs/cozy-desktop/issues"
  },
  "main": "./lib/app.js",
  "bin": {
    "cozy-desktop": "bin/cozy-desktop"
  },
  "repository": "git://github.com/cozy-labs/cozy-desktop.git",
  "logo": "https://raw.githubusercontent.com/cozy-labs/cozy-desktop/master/gui/app/images/icon.png",
  "keywords": [
    "desktop",
    "data",
    "sync",
    "files",
    "cozy"
  ],
  "files": [
    "bin/cozy-desktop",
    "doc/",
    "lib/",
    "CHANGELOG.md",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "bootstrap-couch": "npm run bootstrap-couch-container && npm run bootstrap-couch-system-tables && docker stop cozy-desktop-couch",
    "bootstrap-couch-container": "docker run -d --name cozy-desktop-couch -p 5984:5984 -v $PWD/tmp/couchdb:/opt/couchdb/data klaemo/couchdb:2.0.0 && sleep 1",
    "bootstrap-couch-system-tables": "curl -X PUT http://127.0.0.1:5984/{_global_changes,_metadata,_replicator,_users}",
    "bootstrap-cozy": "for cozy_env in dev test; do export cozy_env && npm run bootstrap-cozy-env || exit $?; done",
    "bootstrap-cozy-env": "export cozy_hostname=$cozy_env.cozy-desktop.local && npm run bootstrap-cozy-instance && npm run bootstrap-cozy-hostname",
    "bootstrap-cozy-hostname": "grep $cozy_hostname /etc/hosts || echo 127.0.0.1 $cozy_hostname | sudo tee -a /etc/hosts",
    "bootstrap-cozy-instance": "cozy-stack instances add --dev --passphrase CozyTest_1 $cozy_hostname:8080",
    "build": "babel --source-maps --out-dir lib/ src/",
    "clean": "rm -rf lib/ && rm -rf tmp/",
    "eslint": "./node_modules/.bin/eslint './src/**/*.js' './test/**/*.js'",
    "fauxton": "babel-node ./src/bin/fauxton.js",
    "flow": "flow status --quiet --show-all-errors",
    "lint": "npm run eslint && npm run flow",
    "repl": "cross-env COZY_DESKTOP_HEARTBEAT=5000 babel-node ./src/bin/repl.js",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "start": "cross-env COZY_DESKTOP_HEARTBEAT=5000 babel-node ./src/bin/cli.js",
    "test": "installed-check && npm run test-unit && npm run test-integration",
    "test-coverage": "installed-check && npm run test-unit-coverage && npm run test-integration",
    "test-integration": "cross-env NODE_ENV=test mocha test/integration/v3",
    "test-unit": "cross-env NODE_ENV=test mocha test/unit/",
    "test-unit-coverage": "cross-env NODE_ENV=test nyc mocha test/unit/",
    "watch": "npm run build -- --watch"
  },
  "dependencies": {
    "@ava/pretty-format": "^1.1.0",
    "async": "^2.1.5",
    "babel-polyfill": "^6.23.0",
    "bluebird": "^3.5.0",
    "btoa": "1.1.2",
    "chalk": "^1.1.3",
    "chokidar": "1.6.1",
    "commander": "2.9.0",
    "cozy-client-js": "^0.1.8",
    "diff": "^3.2.0",
    "fs-extra": "^2.1.1",
    "isomorphic-fetch": "2.2.1",
    "lodash.clone": "4.5.0",
    "lodash.find": "4.6.0",
    "lodash.isequal": "4.5.0",
    "lodash.pick": "4.4.0",
    "micromatch": "2.3.11",
    "node-fetch": "1.6.3",
    "node-uuid": "1.4.8",
    "opn": "4.0.2",
    "pouchdb": "6.1.2",
    "pouchdb-find": "^0.10.5",
    "progress": "1.1.8",
    "read": "1.0.7",
    "readdirp": "2.1.0",
    "request-json-light": "0.5.25"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-plugin-autobind-class-methods": "^5.0.1",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2016": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "cross-env": "^4.0.0",
    "del": "^2.2.2",
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-plugin-flowtype": "^2.30.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.0.1",
    "faker": "^4.1.0",
    "flow-bin": "^0.43.0",
    "flow-typed": "^2.0.0",
    "installed-check": "^2.1.1",
    "istanbul": "^0.4.5",
    "jsverify": "^0.8.0",
    "lodash.uniq": "^4.5.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "pouchdb-server": "^2.3.4",
    "should": "^11.2.1",
    "should-sinon": "^0.0.5",
    "sinon": "^2.0.0",
    "sinon-stub-promise": "^4.0.0",
    "source-map-support": "^0.4.11"
  }
}
