@require './node_modules/cozy-ui/dist/cozy-ui.min.css'
@require './node_modules/cozy-ui/stylus/components/button.styl'
@require './node_modules/cozy-ui/stylus/components/forms.styl'
@require './node_modules/cozy-ui/stylus/settings/fontstack.styl'
@require './node_modules/cozy-ui/stylus/utilities/typography.styl'

@keyframes rotate
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

@keyframes slide
  from
    transform translateX(-100%)
  to
    transform translateX(400%)

@font-face
    font-family Lato
    font-style normal
    font-weight normal
    src url('fonts/lato-regular.woff2') format('woff2')

@font-face
    font-family Lato
    font-style normal
    font-weight bold
    src url('fonts/lato-bold.woff2') format('woff2')

blue = dodger-blue

@import '_wizard'
@import '_two_panes'
@import '_updater'
@import '_icon'
@import '_toggle'
@import '_markdown_viewer'
@import '_bottombar'
@import '_statusbar'
@import '_details'
@import '_button'

@media (max-width: 1000px)
  html
    font-size 0.8

@media (min-width: 1600px)
  html
    font-size 1.25


body
  @extend $font-labor
  margin 0
  background-color var(--white)

h1
  @extend $title-default
  font-size 2rem

h2
  @extend $title-default
  font-size 1.5rem

p
  // font-size 1.1rem
  line-height 1.6

button, input
  font inherit
