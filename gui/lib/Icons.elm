import Svg exposing (Svg)
import Svg.Attributes
import VirtualDom


type alias IconFunction =
  Int -> Bool -> Svg


white : String
white =
  "#fff"


grey : String
grey =
  -- grey-06
  "#748192"


icon : Int -> List Svg.Svg -> IconFunction
icon viewbox paths size active =
  let
    color =
      if active then
        white
      else
        grey

    stringSize =
      toString size

    viewboxSize =
      "0 0 " ++ (toString viewbox) ++ " " ++ (toString viewbox)
  in
    Svg.svg
      [ Svg.Attributes.width stringSize
      , Svg.Attributes.height stringSize
      , Svg.Attributes.viewBox viewboxSize
      , Svg.Attributes.fill color
      ]
      paths


path : String -> Svg.Svg
path d =
  Svg.path [ Svg.Attributes.d d ] []


polygon : String -> Svg.Svg
polygon points =
  Svg.polygon [ Svg.Attributes.points points ] []


